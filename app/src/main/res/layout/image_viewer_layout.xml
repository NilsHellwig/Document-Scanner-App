<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/image_viewer_image_layout_width"
        android:layout_height="@dimen/image_viewer_image_layout_height"
        android:layout_marginStart="@dimen/image_viewer_image_layout_default_margin"
        android:layout_marginLeft="@dimen/image_viewer_image_layout_default_margin"
        android:layout_marginTop="@dimen/image_viewer_image_layout_default_margin"
        android:layout_marginEnd="@dimen/image_viewer_image_layout_default_margin"
        android:layout_marginRight="@dimen/image_viewer_image_layout_default_margin"
        android:layout_marginBottom="@dimen/image_viewer_image_layout_default_margin"
        android:contentDescription="@string/image_viewer_image_view_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
